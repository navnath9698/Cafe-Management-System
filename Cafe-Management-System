#include <iostream>
#include <string>
using namespace std;

const int MAX_USERS = 100;

class CafeManagementSystem {
private:
    int userCount = 0;
    int ids[MAX_USERS];
    string names[MAX_USERS];
    string emails[MAX_USERS];
    string passwords[MAX_USERS];

public:
    void signUP() {
        if (userCount >= MAX_USERS) {
            cout << "Error! Maximum number of users reached!" << endl;
            return;
        }

        cout << "<-----------Sign-Up---------->" << endl;
        cout << ">>Enter Username: ";
        cin >> names[userCount];
        cout << ">>Enter Email ID: ";
        cin >> emails[userCount];
        cout << ">>Enter User ID: ";
        cin >> ids[userCount];
        cout << ">>Enter Password: ";
        cin >> passwords[userCount];

        userCount++;
        cout << "Signed Up Successfully!" << endl;
        login();
    }

    void login() 
	{
        int inputID;
        string inputPassword;
        upside:
        cout << "<-----------Login------------>" << endl;
        cout << ">>Enter User ID: ";
        cin >> inputID;
        cout << ">>Enter Password: ";
        cin >> inputPassword;

        bool loginSuccess = false;

        for (int i = 0; i < userCount; i++) 
		{
            if (ids[i] == inputID && passwords[i] == inputPassword) 
			{
                cout << "Logged In Successfully! Welcome, " << names[i] << "." << endl;
                loginSuccess = true;
                break;
            }
        }

        if (!loginSuccess) 
		{
            cout << "Login Error! Make sure your ID and password both are correct." << endl;
            goto upside;
        }
    }

    void displayUsers() 
	{
        cout << "\nRegistered Users:" << endl;
        for (int i = 0; i < userCount; i++) 
		{
            cout << "User ID: " << ids[i] << ", Name: " << names[i] << ", Email: " << emails[i] << endl;
        }
    }
};
